extends layout

block content
  a.btn.btn-success(href="/users/login") Login
  #content.p-4.p-md-5
    h2.mb-4 Post
    .card.md-4
      .card-body
        .row
          each post, i in posts
            .col-lg-6
              img.img-fluid.rounded(src='https://thegraphicsfairy.com/wp-content/uploads/2015/10/Halloween-Mystery-Lady-Image-GraphicsFairy.jpg')
            .col-lg-6
              .card-title= post.title
              .card-text= post.content
              a.btn.btn-primary(href="/posts/"+post._id) Read More

  script(src='/javascript/jquery.min.js')
  script(src='/javascript/bootstrap.min.js')
